{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "module": "ESNext",
    "target": "ES2023",
    "preserveSymlinks": true,
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": ["node_modules", "dist", "tests"]
}